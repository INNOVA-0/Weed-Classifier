<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical"
    android:weightSum="2">

    <RelativeLayout
        android:id="@+id/layoutgreen_1"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        >
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backgroundgreen_1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_below="@id/toolbar"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_weight="4"
            android:src="@drawable/add" />
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="false"
        app:cardPreventCornerOverlap="false"
        android:id="@+id/cv_one_login"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="#fcfcfc"
        android:layout_marginTop="-60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="25dp"
        android:elevation="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="400dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="Select One Option to Continue"
                android:textColor="#262626"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/clickimage"
                android:layout_width="386dp"
                android:layout_height="60dp"
                android:layout_below="@id/textView4"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/backgroundbutton_1"
                android:drawableStart="@drawable/cam"
                android:elevation="10dp"
                android:paddingStart="8dp"
                android:text="Live Detection" />

            <Button
                android:id="@+id/BrowserImage"
                android:layout_width="386dp"
                android:layout_height="60dp"
                android:layout_below="@id/clickimage"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/backgroundbutton_1"
                android:drawableStart="@drawable/imgbrowse"
                android:elevation="10dp"
                android:paddingStart="10dp"
                android:text="Image based detection" />

            <Button
                android:id="@+id/btnExit"
                android:layout_width="386dp"
                android:layout_height="60dp"
                android:layout_below="@id/BrowserImage"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/backgroundbutton_1"
                android:elevation="10dp"
                android:text="exit" />

<!--            <Button-->
<!--                android:id="@+id/Logout"-->
<!--                android:layout_width="386dp"-->
<!--                android:layout_height="60dp"-->
<!--                android:layout_below="@id/btnExit"-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_marginEnd="10dp"-->
<!--                android:layout_marginBottom="10dp"-->
<!--                android:layout_marginStart="10dp"-->
<!--                android:background="@drawable/backgroundbutton_1"-->
<!--                android:elevation="10dp"-->
<!--                android:text="@string/logout" />-->

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>